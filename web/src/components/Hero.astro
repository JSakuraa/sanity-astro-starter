---
import { urlForImage } from "../lib/urlForImage";
import PortableTextBody from "./PortableTextBody.astro";
import { myPortableTextComponents } from "./PortableTextComponents";
import "../styles/global.css";

const { tag, title, image, body } = Astro.props;
---
<section class="w-full py-16 px-4 bg-white">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between space-y-8 md:space-y-0 md:space-x-12">
    {/* Text Content */}
    <div class="w-full md:w-1/2 text-center md:text-left">
      <p class="text-sm text-blue-600 uppercase tracking-wide mb-4">
        {tag}
      </p>
      
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
        {title}
      </h1>
      
      <PortableTextBody class="text-lg text-gray-600 mb-8" body={body} components={myPortableTextComponents}/>
      
      <div class="flex justify-center md:justify-start space-x-4">
        <a 
          href="#" 
          class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
        >
          Get Started
        </a>
        <a 
          href="#" 
          class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors"
        >
          Learn More
        </a>
      </div>
    </div>
    
    {/* Image */}
    <div class="w-full md:w-1/2 flex justify-center">
        <img src={urlForImage(image).url()} alt={image.alt} />
    </div>
  </div>
</section>